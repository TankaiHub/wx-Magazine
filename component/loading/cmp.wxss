/* component/loading/cmp.wxss */
.container{
    position: relative;
    width:60rpx;
    height:60rpx;
}
.circle{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background:rgba(0, 0, 0, .8);
    border-radius:50%;
    animation:run 2s infinite;
}
.circle-delay{
    animation-delay: -1s;
}
@keyframes run{
    0%{
        transform: scale(0)
    }
    50%{
        transform: scale(1)
    }
    100%{
        transform: scale(0)
    }
}