/* pages/search/search.wxss */
.container{
    padding: 0 20rpx;
}
.recommend-container{
    padding:50rpx 0;
    margin:50rpx 0;
    border-top:2rpx solid #000;
    border-bottom:2rpx solid #000;
}
.text{
    font-size: 50rpx;
    font-weight: 500;
    margin-bottom: 20rpx;
}
.recommend{
    font-size: 32rpx;
    margin-top:10rpx;
    letter-spacing: 2rpx;
}
.loading-container{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color:#fff;
}
.loading{
    position: absolute;
    top:50%;
    left:50%;
    transform: translateX(-50%) translateY(-50%);
    z-index:999;
}